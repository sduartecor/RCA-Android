<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtListComentario"
            android:layout_width="305dp"
            android:layout_height="match_parent"
            android:padding="3dp"
            android:text="COMENTARIO:"
            android:textSize="20sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtFormulario"
            android:layout_width="184dp"
            android:layout_height="match_parent"
            android:padding="3dp"
            android:text="FORMULARIO:"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txtEstacion"
            android:layout_width="224dp"
            android:layout_height="match_parent"
            android:padding="3dp"
            android:text="ESTACIÓN:"
            android:textSize="20sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtListNo2"
            android:layout_width="184dp"
            android:layout_height="match_parent"
            android:padding="3dp"
            android:text="No2:"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txtListCo2"
            android:layout_width="224dp"
            android:layout_height="match_parent"
            android:padding="3dp"
            android:text="Co2:"
            android:textSize="20sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtListPm25"
            android:layout_width="184dp"
            android:layout_height="match_parent"
            android:padding="3dp"
            android:text="Pm2,5:"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txtListPm10"
            android:layout_width="224dp"
            android:layout_height="match_parent"
            android:padding="3dp"
            android:text="Pm10:"
            android:textSize="20sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtListTemp"
            android:layout_width="184dp"
            android:layout_height="match_parent"
            android:padding="3dp"
            android:text="Temperatura:"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txtListPrep"
            android:layout_width="224dp"
            android:layout_height="match_parent"
            android:padding="3dp"
            android:text="Precipitación:"
            android:textSize="20sp" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtListUsuario"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="3dp"
            android:text="Usuario:"
            android:textSize="20sp" />



    </LinearLayout>



</LinearLayout>